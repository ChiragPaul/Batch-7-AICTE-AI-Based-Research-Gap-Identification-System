# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=models/gemini-2.0-flash

# HuggingFace Configuration
HF_TOKEN=your_huggingface_token_here
# Multilingual embedding model (recommended)
HF_MODEL_NAME=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
HF_LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.3

# Analysis provider: auto | gemini | huggingface
# auto -> prefers HuggingFace if HF_TOKEN exists, otherwise Gemini
ANALYSIS_PROVIDER=auto
